help: ## Show this help
	@echo "Usage: make [target]"
	@echo ""
	@echo "Targets:"
	@awk 'BEGIN {FS = ":.*?## "} /^[a-zA-Z_-]+:.*?## / {printf "  %-20s %s\n", $$1, $$2}' $(MAKEFILE_LIST)

encrypt: ## Encrypt secrets
	./scripts/secrets.sh encrypt

decrypt: ## Decrypt secrets
	./scripts/secrets.sh decrypt